!titleElementSharedKeys = {
    x: 10
    y: 10
    font: "card_character"
    fontScale: 1.0
}

!imageElementSharedKeys = {
    x: 0
    y: 0
    scaleX: 1.0
    scaleY: 1.0
}

!normalBulletSize = 128
!obsidianBulletSize = 200
!obsidianBulletScale = 0.5

!bulletSharedElements = [
