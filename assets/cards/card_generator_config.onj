!coverSharedElements = [

    $ImageElement {
        x: <(!baseSize / 2 - !obsidianBulletSize * !obsidianBulletScale / 2)#i>
        y: <(!baseSize / 2 - !obsidianBulletSize * !obsidianBulletScale / 2)#i>
        textureName: "obsidian_bullet"
        scaleX: !obsidianBulletScale
        scaleY: !obsidianBulletScale
    }

]


