    font: "card_character"
    fontScale: 1.5
}

!normalBulletSize = 128
!obsidianBulletSize = 200
!obsidianBulletScale = 0.5

!bulletSharedElements = [

]

!coverSharedElements = [

    $ImageElement {
        x: <(!baseSize / 2 - !obsidianBulletSize * !obsidianBulletScale / 2)#i>
