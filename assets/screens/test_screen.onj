
import "imports/colors.onj" as color

!sourceZIndex = 2
!targetZIndex = 1

viewport: $FitViewport {
    worldWidth: 100.0
    worldHeight: 50.0
}

assets: {
    fonts: [

        $DistanceFieldFont {
            name: "distance_field"
            fontFile: "fonts/distanceField.fnt"
            imageFile: "fonts/distanceField.png"
        }

    ]
    textures: []
    textureAtlases: []
    cursors: []
    postProcessors: []
    animations: []
}

options: {
    setFillParentOnRoot: true
    defaultCursor: {
        useSystemCursor: true
        cursorName: "arrow"
    }
    postProcessor: null
}



!row1 = {
    cells: [

        {
            element: $Label {
                text: "Welcome to .fourty-five"
                font: "distance_field"
                fontScale: 0.15
                color: !color.white
                align: "center"
                zIndex: !sourceZIndex
            }
        }

    ]
}

children: [


    $Table {
        fillX: true
        fillY: true
        rows: [ !row1 ]
        applyZIndices: true
    }

]
