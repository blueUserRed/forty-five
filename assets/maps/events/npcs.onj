                font: "red_wing",
                fontScale: 1.0,
                color: color.forty_white
            }
        },
        image: {
            textureName: "npc_stranger",
            scale: 1.0
        }
    },

    {
        name: "witch",
        displayName: "Witch",
        dialog: {
            parts: [
                {
                    rawText: "$4$1I'll warn you!$1$4",
                    effects: [
                        $Color {
                            indicator: "$1",
                            color: color.red
                        },
                        $Font {
                            indicator: "$4",
                            font: "red_wing_bmp"
                        }
                    ],
                    next: $Continue {}
                },
                {
                    rawText: "Not a $1single$1 step further or I $4swear to the $3Gods$3 I'll $1kill$1 you$4",
                    effects: [
                        $Color {
                            indicator: "$1",
                            color: color.red
                        },
                        $Action {
                            indicator: "$3",
                            action: shake,
                        },
                        $FontScale {
                            indicator: "$4",
                            fontScale: 1.4
                        }
                    ],
                    next: $Continue {}
                },
                {
                    rawText: "This was $1$3$4OUR$4$3$1 home before you all came and took it.",
                    effects: [
                        $Color {
                            indicator: "$1",
                            color: color.red
                        },
                        $Action {
                            indicator: "$3",
                            action: shake,
                        },
                        $FontScale {
                            indicator: "$4",
                            fontScale: 1.4
                        }
                    ],
                    next: $Continue {}
                },
                {
                    rawText: "Someday, the $2Onathans$2 will return to $5Salem$5 and reclaim it. Until then, $1$4stay away$4$1 from it if you value your $3life$3.",
                    effects: [
                        $Color {
                            indicator: "$1",
                            color: color.red
                        },
                        $Color {
                            indicator: "$2",
                            color: color.grey
                        },
                        $Color {
                            indicator: "$5",
                            color: color.orange
                        },
                        $Action {
                            indicator: "$3",
                            action: shake,
                        },
                        $FontScale {
                            indicator: "$4",
                            fontScale: 1.4
                        }
                    ],
                    next: $Continue {}
                },
                {
                    rawText: "Oh and and tell the $2governor$2 that his days are $1$3limited$3$1.",
                    effects: [
                        $Color {
                            indicator: "$1",
                            color: color.red
                        },
                        $Color {
                            indicator: "$2",
                            color: color.grey
                        },
                        $Color {
                            indicator: "$5",
                            color: color.orange
                        },
                        $Action {
                            indicator: "$3",
                            action: shake,
                        },
                        $FontScale {
                            indicator: "$4",
                            fontScale: 1.4
                        }
                    ],
                    next: $EndOfDialog {
                        changeToScreen: "screens/map_screen.onj"
                    }
                },
            ],
            defaults: {
                font: "red_wing",
                fontScale: 1.2,
                color: color.forty_white
            }
        },
        image: {
            textureName: "npc_witch",
            scale: 0.9
        }
    },

]
