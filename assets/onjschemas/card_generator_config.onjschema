
import "imports/asset_definitions.onjschema" as _


baseImage: string
outputFile: string

!cardElementSharedKeys = {
    x: int
    y: int
}

$CardElement [

    $TextElement {
        text: string
        font: string
        fontScale: float
        ...!cardElementSharedKeys
    }

    $ImageElement {
        textureName: string
        scaleX: float
        scaleY: float
        ...!cardElementSharedKeys
    }

    $RectangleElement {
        width: int
        height: int
        color: string
        strokeSize: int
        ...!cardElementSharedKeys
    }

]

!cardDeclaration = {
    name: string
    elements: $CardElement[*]
}

cards: !cardDeclaration[*]

!customFontDeclaration = {
    name: string
    file: string
}

assets: {

//    textures: !textureDeclaration[*]
//    textureAtlases: !textureAtlasDeclaration[*]
    fonts: !customFontDeclaration[*]
    pixmaps: !pixmapDeclaration[*]

}

packer: {
    pageWidth: int
    pageHeight: int
    padding: int
}
